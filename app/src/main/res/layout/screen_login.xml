<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <com.agima.atizik.alphapedometer.view.login.LoginView
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_email_layout"
                style="@style/TextInputLogin"
                android:layout_marginBottom="@dimen/space_normal_16"
                android:hint="@string/login_hint_email"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_email"
                    style="@style/EditTextLogin"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_password_layout"
                style="@style/TextInputLogin"
                android:layout_marginBottom="@dimen/login.padding.bottom"
                android:hint="@string/login_hint_password"
                android:theme="@style/TextLabel">

                <EditText
                    android:id="@+id/edit_password"
                    style="@style/EditTextLogin"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="@dimen/login.button.width"
                android:layout_height="@dimen/login.button.height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_login_button"
                android:enabled="false"
                android:fontFamily="@string/roboto_regular"
                android:text="@string/login_text_button"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_normal_16" />
        </LinearLayout>
    </com.agima.atizik.alphapedometer.view.login.LoginView>

</layout>